            </div>
            <div class="form-group">
            <label asp-for="UserId" class="control-label"></label>
            <input asp-for="UserId" class="form-control" />
            <span asp-validation-for="UserId" class="text-danger"></span>
            </div> *@
            <div class="input-box">
                <select class="select" asp-for="SemesterId" type="text" placeholder="Semester Id" asp-items="ViewBag.SemesterId"></select>
            </div>
            <div class="a">
                <input type="submit" value="Create" class="btn btn-primary" style="margin-right: 10px;" />
                <a asp-action="Index" class="btn">Back to List</a>
            </div>
        </form>

    </div>



</body>
@section Scripts {
