@model POEPart3.Module

@{
    ViewData["Title"] = "Create";
}

<link rel="stylesheet" href="~/css/CRUDStyle.css" />


<body class="body">
    <div class="wrapper">
        <h1>Create</h1>

        <h4>Module</h4>

        <form asp-action="Create">
