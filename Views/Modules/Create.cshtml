            </div>
            <div class="input-box">
                <input asp-for="Name" type="text" placeholder="Module Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="input-box">
                <input asp-for="Credits" type="text" placeholder="Module Credits" />
                <span asp-validation-for="Credits" class="text-danger"></span>
            </div>
            <div class="input-box">
                <input asp-for="ClassHoursPerWeek" type="text" placeholder="Module Class Hours Per Week" />
                <span asp-validation-for="ClassHoursPerWeek" class="text-danger"></span>
            </div>
            @*             <div class="form-group">
