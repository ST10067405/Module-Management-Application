@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}
<link rel="stylesheet" href="~/css/IdentityStyle.css" />
<link rel="stylesheet" href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" />

<body class="body">
    <div class="wrapper">
        <h1>@ViewData["Title"]</h1>
        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="input-box">
                <input asp-for="Input.Email" type="text" placeholder="Email" autocomplete="username" aria-required="true" required />
                <i class='bx bxs-user'></i>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="input-box">
                <input asp-for="Input.Password" type="password" placeholder="Password" autocomplete="current-password" aria-required="true" required />
                <i class='bx bxs-lock-alt'></i>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="remember-forgot">
                <label asp-for="Input.RememberMe" class="form-label">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
                <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
            </div>
            <div>
                <button id="login-submit" type="submit" class="btn">Login</button>
            </div>
            <div class="register-link">
                <p>
                    Don't have an account?
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register</a>
                </p>
            </div>
        </form>
    </div>

</body>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
