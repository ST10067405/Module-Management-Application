@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<link rel="stylesheet" href="~/css/IdentityStyle.css" />
<link rel="stylesheet" href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" />



<body class="body">
    <div class="wrapper">
        <h1>@ViewData["Title"]</h1>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="input-box">
                <input asp-for="Input.Email" type="text" placeholder="Email" autocomplete="username" aria-required="true" required/>
                <i class='bx bxs-user'></i>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="input-box">
                <input asp-for="Input.Password" type="password" placeholder="Password" autocomplete="new-password" aria-required="true" required />
                <i class='bx bxs-lock-alt'></i>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="input-box">
                <input asp-for="Input.ConfirmPassword" type="password" placeholder="Confirm Password" autocomplete="new-password" aria-required="true" />
                <i class='bx bxs-lock-alt'></i>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <p>
                <button id="registerSubmit" type="submit" class="btn">Register</button>
            </p>
            <div class="register-link">
                <p>
                    Already have an account?
                    <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Login</a>
                </p>
            </div>
        </form>
    </div>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
